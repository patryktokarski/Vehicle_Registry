{% extends 'base.html.twig' %}

{% block username %}{{ user.email }}{% endblock username %}
{% block title %}Info{% endblock title %}
{% block desc %}{% endblock desc %}
{% block body %}
           
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Capacity [dm3]</th>
                <th>Power [KM]</th>
                <th>First Registration</th>
                <th>Averange Fuel Consumption [l/100km]</th>
            </tr>
        </thead>
        <tbody>
        {% for c in car %}
            <tr>
                <td>{{ c.brand.name }}</td>
                <td>{{ c.model.name }}</td>
                <td>{{ c.capacity }}</td>
                <td>{{ c.power }}</td>
                <td>{{ c.firstRegistration|date('Y-m-d') }}</td>
                <td>{{ total | number_format (1, ".") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <table class="table">
        <h1>Refuel informations</h1>
        <thead>
            <tr>
                <th>Date</th>
                <th>Liters</th>
                <th>Kilometer start</th>
                <th>Kilometer end</th>
                <th>Averange fuel consumption</th>
            </tr>
        </thead>
        <tbody>
        {% for refuel in refuels %}
            <tr>
                <td>{% if refuel.date %}{{ refuel.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ refuel.liters }}</td>
                <td>{{ refuel.kilometerStart }}</td>
                <td>{{ refuel.kilometerEnd }}</td>
                <td>{{ refuel.avgFuelConsumption| number_format(1, ".")}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <table class="table">
        <h1>Repair informations</h1>
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        {% for repair in repairs %}
            <tr>
                <td>{% if repair.date %}{{ repair.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ repair.category.name }}</td>
                <td>{{ repair.amount }}</td>
                <td>
                    <li><a href="{{ path('show_repair_info', { 'id': repair.id }) }}">Show description</a></li>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock body %}
