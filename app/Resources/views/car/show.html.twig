{% extends 'base.html.twig' %}


{% block title %}Please confirm deleting{% endblock title %}
{% block desc %}<a href="{{ path('car_edit', {'id': car.id }) }}" class="badge">{{ 'Back'|trans }}</a>{%  endblock desc %}
{% block body %}
    <table class="table text-center table-bordered text-justify">
        <tbody>
            <tr>
                <th>{{ 'Brand'|trans }}</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>{{ 'Model'|trans }}</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>{{ 'Fuel'|trans }}</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>{{ 'Capacity'|trans }}</th>
                <td>{{ car.capacity }}</td>
            </tr>
            <tr>
                <th>{{ 'Power'|trans }}</th>
                <td>{{ car.power }}</td>
            </tr>
            <tr>
                <th>{{ 'First Registration'|trans }}</th>
                <td>{% if car.firstRegistration %}{{ car.firstRegistration|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        <input type="submit" value="{{ 'Delete'|trans }}" class="btn btn-danger">
    {{ form_end(delete_form) }}

{% endblock %}
