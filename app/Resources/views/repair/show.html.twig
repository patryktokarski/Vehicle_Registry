{% extends 'base.html.twig' %}

{% block title %}{{ 'Repair'|trans }}{% endblock title %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ repair.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Date'|trans }}</th>
                <td>{% if repair.date %}{{ repair.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'Amount'|trans }}</th>
                <td>{{ repair.amount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('show_vehicle_repo', { 'id': repair.car.id }) }}">{{ 'Back'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('repair_edit', { 'id': repair.id }) }}">{{ 'Edit'|trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'Delete'|trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
