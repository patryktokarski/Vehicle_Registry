{% extends 'base.html.twig' %}

{% block desc %}
    <a href="{{ path('show_vehicle_repo', { 'id': repair.car.id }) }}" class="badge">{{ 'Back'|trans }}</a>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        {{ flashMessage }}
    {% endfor %}
{% endblock desc %}
{% block title %}{{ 'Repair'|trans }}{% endblock title %}
{% block body %}

    <table class="table text-center table-bordered text-justify">
        <tbody>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ repair.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Date'|trans }}</th>
                <td>{% if repair.date %}{{ repair.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'Amount'|trans }}</th>
                <td>{{ repair.amount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('repair_edit', { 'id': repair.id }) }}" class="btn bg-primary">{{ 'Edit'|trans }}</a>

{% endblock %}
