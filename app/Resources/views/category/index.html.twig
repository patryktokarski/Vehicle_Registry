{% extends 'base.html.twig' %}

{% block title %}Categories list{% endblock title %}
{% block desc %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        {{ flashMessage }}
    {% endfor %}
{% endblock desc %}
{% block body %}

    <a href="{{ path('category_new') }}" class="btn btn-primary">Create a new category</a><hr>
    <table class="table text-center table-bordered text-justify">
        <thead class="popover-title">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td><a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
